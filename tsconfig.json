{
  "compilerOptions": {
    "outDir": "./lib",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    // Import non-ES modules as default imports.
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
